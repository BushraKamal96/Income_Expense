<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/rvlyout"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:subtitleTextColor="@android:color/white"
            app:title="Loan"
            app:titleTextColor="@android:color/white">


            <ImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@android:color/white"


                android:background="@drawable/ic_exit_to_app_black_24dp" />

            <ImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/cashinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:backgroundTint="@android:color/white"
                android:background="@drawable/ic_account_balance_wallet_black_24dp" />



        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/loan_tv_il"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:boxStrokeColor="@color/colorAccent"
            app:boxStrokeWidth="2dp">

            <EditText
                android:id="@+id/loanperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:hint="Person Name"
                android:inputType="textCapWords"
                android:padding="10dp"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/loan_tv_il2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:backgroundTint="@color/darkpurplr"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/colorAccent"
            app:boxStrokeWidth="2dp">

            <EditText
                android:id="@+id/loanrupee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loan_tv_il"
                android:hint="Amount"
                android:inputType="number"
                android:padding="10dp"
                android:layout_marginTop="2dp"

                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/loan_tv_il12"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:backgroundTint="@color/darkpurplr"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/colorAccent"
            app:boxStrokeWidth="2dp">

            <EditText
                android:id="@+id/inputype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/loanrupee"
                android:hint="Given/ Taken"
                android:layout_gravity="center_horizontal"
                android:inputType="text"
                android:padding="10dp"
                android:layout_marginTop="2dp"
                android:focusableInTouchMode="false"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/loan_tv_il19"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:backgroundTint="@color/darkpurplr"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/colorAccent"
            app:boxStrokeWidth="2dp">

            <EditText
                android:id="@+id/hhhh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inputype"
                android:focusableInTouchMode="false"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:hint="Set Due Date(Optional)"
                />
        </android.support.design.widget.TextInputLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/add_loan"
            android:layout_width="wrap_content"
            android:background="@drawable/round_button"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:text="Add"
            />

        <Button
            android:id="@+id/show_loans"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_margin="5dp"
            android:background="@drawable/round_button"
android:textColor="@android:color/white"
            android:text="Show"
            />

    </LinearLayout>



</RelativeLayout>