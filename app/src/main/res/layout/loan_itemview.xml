<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="2dp"
        android:elevation="9dp"
        android:padding="3dp"
        app:cardCornerRadius="6dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            >
            <LinearLayout
                android:id="@+id/calender"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@color/lightgrey"
                >

                <LinearLayout
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    >

                    <TextView
                        android:id="@+id/loan_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/loan_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/loan_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="year"
                    android:textColor="#000"

                    android:textStyle="bold"
                    android:textSize="20sp" />


            </LinearLayout>

            <Button
                android:id="@+id/delete_record"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="17dp"
                android:clickable="true"
                android:background="@drawable/ic_clear_black_24dp"
                />


            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_toRightOf="@+id/calender"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="6dp"
                >

            </TextView>
            <TextView
                android:id="@+id/loantype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="type"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/person_name"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/calender"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rupee_given"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/loantype"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/calender"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/returndate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="return date"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/rupee_given"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/calender"
                android:textColor="@android:color/black"
                android:textSize="13sp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>